<div>
    <h2 style="color:crimson;">Historial</h2>
    <% if(DB_PRODUCTOS.length > 0){ %> 
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow;"> <th>Nombre</th> <th>Precio</th> <th>Imagen</th> </tr>
            <% for (const producto of DB_PRODUCTOS) {%>
            <tr>
                <td><%= producto.title %></td>
                <td><%= producto.price %></td>
                <td><img src=<%= producto.thumbnail %> width="30"></td>
            </tr>
            <% } %>
        </table>
    </div>
    <% } else { %> 
        <h3 class="alert alert-danger">No hay productos</h3>
    <% } %> 
    
</div>